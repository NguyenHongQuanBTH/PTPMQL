    <input type="text" id="Fname" name="FullName" placeholder="Your FullName..">

     <label for="Adname">Address</label>
    <input type="text" id="Adname" name="Address" placeholder="Your Address..">
    
  
    <input type="submit" value="Submit">
  </form>
</div>
</body>
</html>
